/* Generic Delete Dialog Styles */
DeleteDialog {
    align: center middle;
}

#dialog {
    width: 60;
    height: auto;
    background: $surface;
    border: thick $primary;
    padding: 1 2;
}

#dialog Label {
    width: 100%;
    margin-bottom: 1;
}

#buttons {
    width: auto;
    height: auto;
    align: center middle;
}

#buttons Button {
    width: auto;
    min-width: 12;
    padding: 0 2;
    margin: 0 1;
}
